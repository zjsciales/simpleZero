# Environment variables template
# Copy this file to .env and fill in your actual values

# TastyTrade API Configuration
TASTYTRADE_USERNAME=your_tastytrade_username
TASTYTRADE_PASSWORD=your_tastytrade_password

# XAI Grok API Configuration
XAI_API_KEY=your_xai_api_key_here

# Trading Configuration
PAPER_TRADING=true
DEFAULT_TICKER=SPY
MAX_DAILY_LOSS=500
MAX_POSITION_SIZE=5
RISK_PER_TRADE=2

# Flask Configuration
FLASK_SECRET_KEY=your_flask_secret_key_here
FLASK_ENV=development

# Optional: Additional API Keys
ALPACA_API_KEY=your_alpaca_key_if_using
ALPACA_SECRET_KEY=your_alpaca_secret_if_using